body {
  height: 100%;

  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -khtml-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  -o-user-select: none;
  user-select: none;
}

#solitaireCanvas {
  position: absolute; // positioned for z-index of children
  width: 100%;
  height: 100%;
  // top: 100px;
  // left: 100px;

  cursor: default;
}

.card {
  position: absolute;
}

.baseContainer {
  position: relative;
  z-index: 0;
}

.baseCardElement {
  position: absolute;
}

.foundationBase, .tableauBase {
  background-color: #000;
  opacity: 0.1;
}

.redealImage {
  background-color: #dfd;
}

.exhaustedImage {
  background-color: #fff;
}

.card {
  background: url(<%= image_path('paris.png') %>);
  background-position: 0 0;
  display: none;
}

.visualization {
  backgroundColor: #080;
  opacity: 0.2;
  position: absolute;
  zIndex: 1000000;
}

.button {
  position: absolute;
  text-align: center;
  background-color: #8f8;
}

.undoButton {
}

#newGameButton1 {
}
#newGameButton2 {
}

.ui-draggable, .button, #redealImage {
  cursor: pointer;
}

#youWin {
  background-color: #ccf;
  opacity: 0.9;
  font-size: 40pt;
  padding: 20px;
  text-align: center;
  position: absolute;
  top: 200px;
  left: 50px;
  width: 580px;
  z-index: 1000000;
  display: none;
}
